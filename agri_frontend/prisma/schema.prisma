generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  FARMER
  WORKER
  ADMIN
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  name      String
  password  String
  phone     String?
  avatar    Bytes?
  role      Role       @default(FARMER)
  createdAt DateTime   @default(now())

  soildata  SoilData[]
  stocks    Stock[]
  workers   Worker[]
}

model Stock {
  id        String   @id @default(uuid())
  name      String
  quantity  Int
  location  String
  cost      Float    // ðŸ’° Added field
  userId    String
  createdAt DateTime @default(now())
  sellingPrice Float
  user User @relation(fields: [userId], references: [id])
}

model Worker {
  id        String   @id @default(uuid())
  name      String
  role      String
  farm      String
  cost      Float    // ðŸ’° Added field
  userId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model SoilData {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  N              Float
  P              Float
  K              Float
  pH             Float
  EC             Float
  OC             Float
  S              Float
  Zn             Float
  Fe             Float
  Cu             Float
  Mn             Float
  B              Float
  fertilityClass String
  confidence     Float
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([userId])
}